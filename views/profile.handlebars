          <label for="vehicle_model">Vehicle Model:</label>
          <input class="form-input" id="vehicle_model" name="vehicle_model" />
        </div>
        <div class="form-group col-sm-6 col-md-3">
          <button id="create-post" type="submit" class="btn btn-primary">Create</button>
        </div>
      </div>
    </form>
  </div>
</div>

