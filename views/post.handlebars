<div class="d-flex justify-content-center">
  <div class="text-center">
    <div class="title">
      <h2>{{name}}</h2>
    </div>
    <div class="description">
      <p>{{description}}</p>
    </div>
    <div class="other-info">
      <p>Preferred Contact Method: {{contact_method}}</p>
      <div>
        <p>Contact Details:</p>
        <ul>
          <li>Email: {{userPost.email}}</li>
          <li>Phone: {{userPost.phone}}</li>
        </ul>
      </div>
      <div>
        <p>Vehicle Details:</p>
        <ul>
          <li>Make: {{vehicle_make}}</li>
          <li>Model: {{vehicle_model}}</li>
        </ul>
      </div>
      <div class="hide" id="mapDiv">
        <p>Where I am Stuck:</p>
        <div id="map"></div>
      </div>
      <p>Created by {{userPost.name}} on {{format_date date_created}}</p>
      <input id="post_id" type="hidden" value="{{id}}">
      {{#if logged_in}}
      <button id="acceptMissionBtn" class="btn btn-primary btn-border">Accept this Mission</button>
      <button id="seeLocationBtn" class="btn btn-primary btn-border">See Location</button>
      {{else}}
      <button class="btn btn-primary btn-border hover-effect" onclick="location.href='/login'">Accept this Mission</button>
      <button class="btn btn-primary btn-border" onclick="location.href='/login'">See Location</button>
      {{/if}}
    </div>
  </div>
</div>

