<div class="d-flex justify-content-center">
<div class="text-center">
  <div class="title">
  <h2>{{name}}</h2>
  </div>
  <div class="description">
  <p>{{description}}</p>
  </div>
  <div class="other-info">
  <p>Preferred Contact Method: {{contact_method}}</p>
  <div>
    <p>Contact Details:</p>
    <ul>
      <li>Email: {{userPost.email}}</li>
      <li>Phone: {{userPost.phone}}</li>
    </ul>
  </div>
  <div>
    <p>Vehicle Details:</p>
    <ul>
      <li>Make: {{vehicle_make}}</li>
      <li>Model: {{vehicle_model}}</li>
    </ul>
  </div>
  <p>Created by {{userPost.name}} on {{format_date date_created}}</p>
  {{#if logged_in}}
  <button id="acceptMissionBtn" class="btn btn-primary" >Accept this Mission</button>
      <input id="post_id" type="hidden" value="{{id}}">
  {{else}}
      <button class="btn btn-primary hover-effect" onclick="location.href='/login'">Accept this Mission</button>

  {{/if}}
</div>
</div>
</div>
<script src="../js/post.js" defer></script>