<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <div class="post-btn "><button class="hover-effect" type="post-button" onclick="location.href='/post/{{post.id}}'">{{post.name}}</button></div>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <section class="modal hidden">
  <div class="flex">
    <img src="user.png" width="50px" height="50px" alt="user" />
    <button class="btn-close">â¨‰</button>
  </div>
  <div>
    <h3>Stay in touch</h3>
    <p>
      'Register an account:'
    </p>
  </div>

  <input type="email" id="email" placeholder="example@mail.com" />
  <input type="password" id="password" placeholder="enter secure password" />
  <button class="btn">Submit</button>
</section>

<div class="overlay hidden"></div>
<button class="btn btn-open">Open Modal</button>
  <div class="col-md-7 post-desc">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}