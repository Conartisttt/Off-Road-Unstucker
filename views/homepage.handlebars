<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <div class="post-btn "><button class="hover-effect" type="post-button"
          onclick="location.href='/post/{{post.id}}'">{{post.name}}</button></div>
    </h2>
    <p>Created by {{post.userPost.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7 post-desc">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}